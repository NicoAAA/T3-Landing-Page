---
// src/pages/novedades.astro
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

// CORRECCIÓN: Importamos la galería nueva
import GtaGallery from '../components/Fashion-News.astro'; 

import WhatsAppFloat from '../components/WhatsAppFloat.astro';
import '../styles/global.css';
---

<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/images/LOGOT3.svg" />
    <link rel="image" href="/images/TelaNosotros.png" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Montserrat:wght@400;600;700;800&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <title>Novedades | T3 Textiles</title>
</head>
<body class="bg-black text-[#1f2937] overflow-hidden"> 
    <!-- overflow-hidden en el body es clave para que el scroll lo maneje la galería -->

    <!-- Navbar fija arriba -->
    <div class="fixed top-0 left-0 w-full z-50">
        <Navbar forceSolid={true} />
    </div>

    <!-- Main ocupa toda la pantalla -->
    <main class="h-screen w-full">
        <GtaGallery />
    </main>

    <WhatsAppFloat />

    <!-- Nota: En un diseño tipo 'Reels' infinito, el Footer a veces sobra, 
         o se pone como el último slide. Lo he comentado por ahora para que no rompa el scroll snap. 
         Si lo quieres, descoméntalo, pero tendrás que meterlo DENTRO de GtaGallery como último slide.
    -->
    <!-- <Footer /> -->

</body>
</html>