---
// src/pages/index.astro
// 1. Importamos nuestros componentes del esqueleto
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import Footer from '../components/Footer.astro';
import AboutUs from '../components/AboutUs.astro';
import Contact from '../components/Contact.astro';

// 2. Importamos el componente de WhatsApp flotante
import WhatsAppFloat from '../components/WhatsAppFloat.astro';



// 3. Importamos los estilos globales
import '../styles/global.css';

---

<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="images/LOGOT3.svg" />
    <link rel="image" href="images/TelaNosotros.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Montserrat:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0TLpZsyKz1rslxIeN8B+dn0JzD+c4q3tK8p3K+i+0x+rN8Fw+rW4+N4w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>T3 Textiles</title>
</head>
<body class="bg-[#f9fafb] text-[#1f2937]">

    <Navbar />

    <main>
        <Hero />
        <AboutUs />
        <Features />
        <Contact />
    </main>

    <WhatsAppFloat />

    <Footer />

</body>
</html>