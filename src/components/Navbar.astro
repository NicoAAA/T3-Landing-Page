---
// src/components/Navbar.astro
import '@fontsource/montserrat/700.css';

interface Props {
  forceSolid?: boolean;
}

const { forceSolid = false } = Astro.props;
---

<header 
    id="main-header"
    data-force-solid={forceSolid ? "true" : undefined} 
    class:list={[
        "fixed top-0 w-full z-50 h-20 md:h-24 flex items-center transition-transform duration-500 ease-silk will-change-transform group",
        { "is-active": forceSolid } 
    ]}
>
   <div class="absolute inset-0 bg-surface opacity-0 transition-opacity duration-500 ease-out
                group-hover:opacity-100 group-hover:delay-75
                group-[.is-active]:opacity-100 
                group-[.menu-open]:opacity-100 shadow-sm">
    </div>
    
    <nav class="relative w-full max-w-[90rem] mx-auto px-6 grid grid-cols-3 items-center z-10">
        
        <div class="flex justify-start items-center">
            
            <div class="lg:hidden">
                 <button id="hamburger-btn" class="relative w-6 h-6 text-white transition-colors duration-200 ease-in-out
                                                  group-hover:text-primary 
                                                  group-[.is-active]:text-primary 
                                                  group-[.menu-open]:text-primary">
                    <svg class="w-6 h-6 absolute top-0 left-0 transition-all duration-500 ease-silk transform group-[.menu-open]:opacity-0 group-[.menu-open]:rotate-90" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                    <svg class="w-6 h-6 absolute top-0 left-0 transition-all duration-500 ease-silk transform opacity-0 -rotate-90 group-[.menu-open]:opacity-100 group-[.menu-open]:rotate-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <div class="hidden lg:flex items-center gap-8 text-xs font-brand uppercase tracking-widest font-bold 
                        text-white transition-colors duration-200 ease-in-out
                        group-hover:text-primary 
                        group-[.is-active]:text-primary 
                        group-[.menu-open]:text-primary">
                <a href="/#nosostros" class="hover:text-gray-500 dark:hover:text-gray-300 transition-colors duration-300">Nosotros</a>
                <a href="/novedades" class="hover:text-gray-500 dark:hover:text-gray-300 transition-colors duration-300">T3 Fashion News</a>
                <a href="/#historia" class="hover:text-gray-500 dark:hover:text-gray-300 transition-colors duration-300">Historia</a>
            </div>
        </div>

        <div></div> 

        <div class="flex justify-end items-center gap-6 font-brand uppercase tracking-[0.2em] text-xs font-bold 
                    text-white transition-colors duration-200 ease-in-out
                    group-hover:text-primary 
                    group-[.is-active]:text-primary 
                    group-[.menu-open]:text-primary">
            
            <a href="/politica-de-datos" class="hidden lg:block hover:text-gray-500 dark:hover:text-gray-300 transition-colors duration-300 whitespace-nowrap">Politicas</a>

            <button class="theme-toggle-btn flex items-center justify-center w-8 h-8 rounded-full 
                           hover:bg-white/20 dark:hover:bg-gray-700/50 
                           transition-all duration-300 outline-none focus:ring-2 focus:ring-primary/50" 
                    aria-label="Cambiar tema">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 hidden dark:block">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 block dark:hidden">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z" />
                </svg>
            </button>
            
            <a href="/#contact" class="hidden lg:flex relative overflow-hidden rounded-[5px] shadow-lg group/button justify-center items-center cursor-pointer
                                       bg-action dark:bg-[#243354]">
                <span class="absolute top-0 right-0 w-0 h-full bg-brand transition-all duration-500 ease-silk group-hover/button:w-full group-hover/button:left-0 group-hover/button:right-auto"></span>
                <span class="relative z-20 px-6 py-4 text-white font-bold tracking-[0.3em] transition-colors duration-300 group-hover/button:text-primary dark:text-white whitespace-nowrap">
                    CONTACTANOS
                </span>
            </a>
        </div>
    </nav>

    <a href="/" class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 z-20">
        <img 
            src="/images/LOGOT3.svg" 
            alt="Logo" 
            class="h-16 md:h-24 lg:h-28 transition-all duration-200 ease-in-out
                   brightness-0 invert drop-shadow-md
                   group-hover:brightness-100 group-hover:invert-0 group-hover:drop-shadow-none
                   group-[.is-active]:brightness-100 group-[.is-active]:invert-0 group-[.is-active]:drop-shadow-none
                   group-[.menu-open]:brightness-100 group-[.menu-open]:invert-0
                   
                   /* LÃ“GICA MODO OSCURO (Mantenida) */
                   dark:brightness-0 dark:invert
                   dark:group-hover:brightness-0 dark:group-hover:invert
                   dark:group-[.is-active]:brightness-0 dark:group-[.is-active]:invert
                   dark:group-[.menu-open]:brightness-0 dark:group-[.menu-open]:invert"
        >
    </a>

    <div 
        id="mobile-menu" 
        class="lg:hidden absolute top-0 left-0 w-full bg-surface pt-24 pb-10 px-6 border-b border-primary/10 shadow-xl -z-10
               transition-all duration-500 ease-silk transform origin-top
               opacity-0 invisible -translate-y-10
               group-[.menu-open]:opacity-100 group-[.menu-open]:visible group-[.menu-open]:translate-y-0"
    >
        <div class="flex flex-col gap-5 text-center font-brand uppercase tracking-[0.2em] text-xs font-bold text-primary">
            <a href="/#nosostros" class="hover:text-gray-500 dark:hover:text-gray-300 py-2 transition-colors duration-300">Nosotros</a>
            <a href="/novedades" class="hover:text-gray-500 dark:hover:text-gray-300 py-2 transition-colors duration-300">T3 Fashion News</a>
            <a href="/#historia" class="hover:text-gray-500 dark:hover:text-gray-300 py-2 transition-colors duration-300">Historia</a>
            <hr class="border-red w-1/2 mx-auto my-1">
            <a href="/politica-de-datos" class="hover:text-gray-500 dark:hover:text-gray-300 py-2 transition-colors duration-300">Politicas</a>
            
            <a href="/#contact" class="flex w-full relative overflow-hidden rounded-[5px] shadow-lg group/button justify-center items-center cursor-pointer mt-2
                                       bg-action dark:bg-[#243354]">
                <span class="absolute top-0 right-0 w-0 h-full bg-brand transition-all duration-500 ease-silk group-hover/button:w-full group-hover/button:left-0 group-hover/button:right-auto"></span>
                <span class="relative z-20 px-6 py-4 text-white font-bold tracking-[0.3em] transition-colors duration-300 group-hover/button:text-primary dark:text-white">
                    CONTACTANOS
                </span>
            </a>
        </div>
    </div>
</header>

<script>
    import { initNavbar } from '../scripts/navbar-logic.js';
    initNavbar();
</script>