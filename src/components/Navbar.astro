---
// src/components/Navbar.astro
import '@fontsource/montserrat/700.css';
---

<header 
    id="main-header"
    class="fixed top-0 w-full z-50 h-20 md:h-24 flex items-center
           transition-transform duration-500 ease-silk will-change-transform
           group"
>
    <div class="absolute inset-0 bg-[#fdfbf7] opacity-0 transition-opacity duration-500 ease-out
                group-hover:opacity-100 group-hover:delay-75
                group-[.is-active]:opacity-100 
                group-[.menu-open]:opacity-100 shadow-sm">
    </div>
    
    <nav class="relative w-full max-w-[90rem] mx-auto px-6 grid grid-cols-3 items-center z-10">
        
        <div class="flex justify-start items-center">
            <div class="md:hidden">
                <button id="hamburger-btn" class="relative w-6 h-6 text-white transition-colors duration-200 ease-in-out
                                                  group-hover:text-[#1c1c2e] 
                                                  group-[.is-active]:text-[#1c1c2e] 
                                                  group-[.menu-open]:text-[#1c1c2e]">
                    <svg class="w-6 h-6 absolute top-0 left-0 transition-all duration-500 ease-silk transform group-[.menu-open]:opacity-0 group-[.menu-open]:rotate-90" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                    <svg class="w-6 h-6 absolute top-0 left-0 transition-all duration-500 ease-silk transform opacity-0 -rotate-90 group-[.menu-open]:opacity-100 group-[.menu-open]:rotate-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <div class="hidden md:flex items-center gap-4 md:text-[10px] lg:text-xs lg:gap-8 font-brand uppercase tracking-widest font-bold 
                        text-white transition-colors duration-200 ease-in-out
                        group-hover:text-[#1c1c2e] 
                        group-[.is-active]:text-[#1c1c2e] 
                        group-[.menu-open]:text-[#1c1c2e]">
                <a href="#nosostros" class="hover:text-gray-500 transition-colors duration-300">Nosotros</a>
                <a href="#pricing" class="hover:text-gray-500 transition-colors duration-300">T3 Fashion News</a>
                <a href="#historia" class="hover:text-gray-500 transition-colors duration-300">Historia</a>
            </div>
        </div>

        <div></div>
        
        <div class="flex justify-end items-center gap-6 font-brand uppercase tracking-[0.2em] text-xs font-bold 
                    text-white transition-colors duration-200 ease-in-out
                    group-hover:text-[#1c1c2e] 
                    group-[.is-active]:text-[#1c1c2e] 
                    group-[.menu-open]:text-[#1c1c2e]">
            
            <a href="#" class="hidden md:block hover:text-gray-500 transition-colors duration-300">Politicas</a>
            
            <a href="#contact" class="hidden md:flex relative overflow-hidden rounded-[5px] bg-[#183153] shadow-lg group/button justify-center items-center cursor-pointer">
                <span class="absolute top-0 right-0 w-0 h-full bg-[#A5BBA7] transition-all duration-500 ease-silk group-hover/button:w-full group-hover/button:left-0 group-hover/button:right-auto"></span>
                <span class="relative z-20 px-6 py-4 text-white font-bold tracking-[0.3em] transition-colors duration-300 group-hover/button:text-[#1c1c2e]">
                    CONTACTANOS
                </span>
            </a>

             <a href="#" class="md:hidden block hover:text-gray-500 transition-colors duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path d="M8.5 14.5A2.5 2.5 0 0 0 11 12c0-1.38-.5-2-1-3-1.072-2.143-.224-4.054 2-6 .5 2.5 2 4.9 4 6.5 2 1.6 3 3.5 3 5.5a7 7 0 1 1-14 0c0-1.1.2-2.2.5-3.3.3.9.9 1.8 1.5 2.5v.01a2.5 2.5 0 0 0 1.5.79Z"/>
                </svg>                  
             </a>
        </div>
    </nav>

    <a href="/" class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 z-20">
        <img 
            src="/images/LOGOT3.svg" 
            alt="Logo" 
            class="h-16 md:h-28 transition-all duration-200 ease-in-out
                   brightness-0 invert drop-shadow-md
                   group-hover:brightness-100 group-hover:invert-0 group-hover:drop-shadow-none
                   group-[.is-active]:brightness-100 group-[.is-active]:invert-0 group-[.is-active]:drop-shadow-none
                   group-[.menu-open]:brightness-100 group-[.menu-open]:invert-0"
        >
    </a>

    <div 
        id="mobile-menu" 
        class="md:hidden absolute top-0 left-0 w-full bg-[#fdfbf7] pt-24 pb-10 px-6 border-b border-[#1c1c2e]/10 shadow-xl -z-10
               transition-all duration-500 ease-silk transform origin-top
               opacity-0 invisible -translate-y-10
               group-[.menu-open]:opacity-100 group-[.menu-open]:visible group-[.menu-open]:translate-y-0"
    >
        <div class="flex flex-col gap-5 text-center font-brand uppercase tracking-[0.2em] text-xs font-bold text-[#1c1c2e]">
            <a href="#nosostros" class="hover:text-gray-500 py-2 transition-colors duration-300">Nosotros</a>
            <a href="#pricing" class="hover:text-gray-500 py-2 transition-colors duration-300">T3 Fashion News</a>
            <a href="#historia" class="hover:text-gray-500 py-2 transition-colors duration-300">Historia</a>
            <hr class="border-red w-1/2 mx-auto my-1">
            <a href="#" class="hover:text-gray-500 py-2 transition-colors duration-300">Politicas</a>
            
            <a href="#contact" class="flex w-full relative overflow-hidden rounded-[5px] bg-[#183153] shadow-lg group/button justify-center items-center cursor-pointer mt-2">
                <span class="absolute top-0 right-0 w-0 h-full bg-[#A5BBA7] transition-all duration-500 ease-silk group-hover/button:w-full group-hover/button:left-0 group-hover/button:right-auto"></span>
                <span class="relative z-20 px-6 py-4 text-white font-bold tracking-[0.3em] transition-colors duration-300 group-hover/button:text-[#1c1c2e]">
                    CONTACTANOS
                </span>
            </a>
        </div>
    </div>
</header>

<script>
    import { initNavbar } from '../scripts/navbar-logic.js';
    initNavbar();
</script>